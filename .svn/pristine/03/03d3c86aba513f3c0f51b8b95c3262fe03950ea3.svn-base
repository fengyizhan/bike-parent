<div ng-controller="BorrowRecordController" ng-cloak>
	<ol class="breadcrumb">
		<li>综合查询</li>
		<li class="active">车辆租借记录</li>
	</ol>
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<form id="form1" autocomplete="off" class="form-inline">
					<div class="row" style="margin-bottom: 5px;">
						<div class="col-md-12">
							<div class="input-group input-group-sm">
								<span class="input-group-addon">所属停放区</span>
								<div class="input-group-default" style="min-width: 186px;">
									<ui-select ng-model="searchForm.data.park" theme="bootstrap" title="{{$select.selected.name}}">
										<ui-select-match placeholder="全部">{{$select.selected.name}}</ui-select-match>
										<ui-select-choices position="down" repeat="item in searchForm.parks track by $index">
											<div ng-bind-html="item.name"></div>
										</ui-select-choices> 
									</ui-select>
								</div>
							</div>
							<div class="input-group input-group-sm">
								<span class="input-group-addon">车辆编号</span>
								<input type="text" class="form-control" name="name" ng-model="searchForm.data.vehicle.name" placeholder="请输入车辆编号" style="min-width: 186px;">
							</div>
							<div class="input-group input-group-sm">
								<span class="input-group-addon">SIM卡号</span>
								<input type="text" class="form-control" name="simNo" ng-model="searchForm.data.vehicle.simNo" placeholder="请输入SIM卡号" style="min-width: 186px;">
							</div>
							<div class="input-group input-group-sm">
								<span class="input-group-addon">用户名</span>
								<input type="text" class="form-control" name="username" ng-model="searchForm.data.driver.username" placeholder="请输入用户名" style="min-width: 186px;">
							</div>
							<div class="input-group input-group-sm">
								<span class="input-group-addon">开始时间</span>
								<input type="text" class="form-control" ng-model="searchForm.data.startTime"
									is-open="searchForm.startTime.opened" uib-datepicker-popup="yyyy-MM-dd HH:mm:ss" startingDay="1"
									max-date="searchForm.data.endTime" readonly="readonly" />
								<span class="input-group-btn">
									<button type="button" class="btn btn-default" ng-click="searchForm.startTime.open($event)">
										<i class="glyphicon glyphicon-calendar"></i>
									</button>
								</span> 
							</div>
						</div>
					</div>
					<div class="row" style="margin-bottom: 5px;">
						<div class="col-md-12">
							<div class="input-group input-group-sm">
								<span class="input-group-addon"><span style="letter-spacing:.3em;">结</span><span style="letter-spacing:.3em;">束</span><span style="letter-spacing:.3em;">时</span>间</span>
								<input type="text" class="form-control" ng-model="searchForm.data.endTime"
									is-open="searchForm.endTime.opened" uib-datepicker-popup="yyyy-MM-dd HH:mm:ss" startingDay="1"
									min-date="searchForm.data.startTime" readonly="readonly" />
								<span class="input-group-btn">
									<button type="button" class="btn btn-default" ng-click="searchForm.endTime.open($event)">
										<i class="glyphicon glyphicon-calendar"></i>
									</button>
								</span> 
							</div>
							<button type="submit" class="btn btn-primary btn-sm hidden-xs"
								ng-click="searchForm.submit()">
								<span class="glyphicon glyphicon-search"></span>
								<span>查询</span>
							</button>
						</div>
					</div>
					<div class="row hidden-lg" style="margin-bottom: 5px;">
						<div class="col-sm-6">
							<button type="submit" class="btn btn-primary btn-block"
								ng-click="searchForm.submit()">
								<span class="glyphicon glyphicon-search"></span>
								<span>查询</span>
							</button>
						</div>
					</div>
				</form>
				<div class="row" style="margin-bottom:10px;">
					<div class="col-md-12 text-right">
						<div class="btn-group" role="group" aria-label="...">
							<button type="button" class="btn btn-info btn-sm" ng-click="exportExcel()">
								<span class="glyphicon glyphicon-download-alt" aria-hidden="true"></span>
								<span>根据查询条件导出Excel</span>
							</button>
						</div>
					</div>
				</div>
				<pagination2 parameters="searchForm.data" uri="reporter/integrated/borrow/page/" id="pagination" items-per-page="20">
					<table class="table table-bordered table-condensed table-hover">
						<thead>
							<tr>
								<td width="130">车辆编号</td>
								<td width="130">SIM卡号</td>
								<td width="240">所属停放区</td>
								<td width="110">用户名</td>
								<td width="130">开始时间</td>
								<td width="130">结束时间</td>
								<td width="90">共计时长</td>
								<td width="80">公里数</td>
								<td width="100">花费(单位:元)</td>
							</tr>
						</thead>
						<tbody>
							<tr ng-repeat="item in $parent.list track by $index">
								<td ng-bind="item.vehicle.name"></td>
								<td ng-bind="item.vehicle.simNo"></td>
								<td class="ellipsis"><div style="width: 240px;" ng-bind="item.park.name" title="{{item.park.name}}"></div></td>
								<td ng-bind="item.driver.username"></td>
								<td ng-bind="item.startTime | date:'yyyy-MM-dd HH:mm:ss'"></td>
								<td ng-bind="item.endTime | date:'yyyy-MM-dd HH:mm:ss'"></td>
								<td ng-bind="item.countTime"></td>
								<td ng-bind="item.kilometers"></td>
								<td ng-bind="item.cost"></td>
							</tr>
						</tbody>
					</table>
				</pagination2>
			</div>
		</div>
	</div>
</div>
