package com.tiamaes.bike.exporter.integrated.driver.service;

import java.io.File;
import java.io.FileOutputStream;
import java.util.ArrayList;
import java.util.List;

import javax.annotation.Resource;

import org.apache.commons.lang.time.DateFormatUtils;
import org.apache.logging.log4j.LogManager;
import org.apache.logging.log4j.Logger;
import org.apache.poi.ss.usermodel.Cell;
import org.apache.poi.ss.usermodel.Row;
import org.apache.poi.xssf.streaming.SXSSFWorkbook;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Propagation;
import org.springframework.transaction.annotation.Transactional;

import com.tiamaes.bike.common.bean.integrated.DriverCardRecord;
import com.tiamaes.bike.common.utils.UUIDGenerator;
import com.tiamaes.bike.common.utils.ZipUtils;
import com.tiamaes.bike.exporter.integrated.driver.persistence.DriverQueryMapper;
import com.tiamaes.bike.utils.ExcelWorkBook;
import com.tiamaes.mybatis.PageHelper;
import com.tiamaes.mybatis.Pagination;

@Service
@Transactional(propagation = Propagation.NOT_SUPPORTED)
public class DriverCardRecordService implements DriverCardRecordServiceInterface {
	private static Logger logger = LogManager.getLogger(DriverCardRecordService.class);
	
	@Value("${java.io.tmpdir}")
	private String tmpdir;// 本地临时文件目录
	
	@Resource
	private DriverQueryMapper driverQueryMapper;
	
	@Override
	@Transactional(propagation = Propagation.NOT_SUPPORTED)
	public File exportExcelOfDriverCardRecords(DriverCardRecord driverCardRecord) throws Exception {
		String fileName = driverCardRecord.getZipFileName();
		final String[] headers = { "司机姓名", "手机号", "所属公司", "所属车队", "车牌号",
				"SIM卡号", "插卡时间", "拔卡时间"};
		long start = System.currentTimeMillis();
		List<DriverCardRecord> body = new ArrayList<DriverCardRecord>(60000);
		List<File> files = new ArrayList<File>();
		int page = 1;
		while (true) {
			Pagination<DriverCardRecord> pagination = new Pagination<DriverCardRecord>(page, 60000);
			PageHelper.startPage(pagination);
			body = driverQueryMapper.getListOfDriverCardRecords(driverCardRecord);
			if (body.size() == 0) {
				break;
			}
			SXSSFWorkbook excel = new ExcelWorkBook<DriverCardRecord>(headers, body){
				@Override
				protected void createExcelCells(DriverCardRecord record, Row row) {
					Cell cell = row.createCell(0);
//					cell.setCellValue(record.getDriver().getName());
					Cell cell1 = row.createCell(1);
//					cell1.setCellValue(record.getDriver().getTelephone());
					Cell cell2 = row.createCell(2);
//					cell2.setCellValue(record.getVehicle().getCompany().getName());
					Cell cell3 = row.createCell(3);
//					cell3.setCellValue(record.getVehicle().getDepartment().getName());
					Cell cell4 = row.createCell(4);
//					cell4.setCellValue(record.getVehicle().getCarNo());
					Cell cell5 = row.createCell(5);
//					cell5.setCellValue(record.getVehicle().getSimCode());
					Cell cell6 = row.createCell(6);
					cell6.setCellValue(DateFormatUtils.format(record.getInTime(), "yyyy-MM-dd HH:mm:ss"));
					Cell cell7 = row.createCell(7);
					cell7.setCellValue(DateFormatUtils.format(record.getOutTime(), "yyyy-MM-dd HH:mm:ss"));
				}
			};
			logger.debug(tmpdir);
			File xlsxFile = new File(tmpdir + "/" + UUIDGenerator.getUUID() + ".xlsx");
			FileOutputStream out = new FileOutputStream(xlsxFile);
			excel.write(out);
			out.close();
			excel.dispose();
			files.add(xlsxFile);
			if (body.size() < 60000) {
				break;
			} else {
				page++;
			}
		}
		// 进行打包工作
		String zipFileFullName = tmpdir + "/" + fileName;
		File zipFile = new File(zipFileFullName);
		ZipUtils.createZip(zipFile, files);
		logger.debug(String.format("cost : %d ms", System.currentTimeMillis() - start));
		return zipFile;
	}
	
}
