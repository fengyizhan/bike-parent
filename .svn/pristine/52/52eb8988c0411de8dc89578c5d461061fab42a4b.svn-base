server:
  port: 8713
  contextPath: /wallet
security:
  sessions: NEVER
spring:
  profiles:
    active: local
  application:
    name: wallet
  cloud:
    config:
      uri: http://192.168.241.165:8888
    inetutils:
      ignoredInterfaces:
        - docker0
        - veth.*
  jackson:
    serialization-inclusion: non_null
    serialization:
      indent_output: true
  datasource:
    max-idle: 10
    max-active: 150
    max-wait: 10000
    min-idle: 5
    initial-size: 5
    test-on-borrow: true
    test-while-idle: true
    remove-abandoned-timeout: 120
    remove-abandoned: true
    time-between-eviction-runs-millis: 18800
    validation-query: SELECT 1 FROM DUAL
    jdbc-interceptors: ConnectionState;StatementFinalizer(useEquals=true)
  redis:
    cluster:
      timeout: 2000
      max-redirects: 3
  mongodb:
    port: 27017
# Discovery Server Access
endpoints: 
  restart:
    enabled: true
  shutdown:
    enabled: true
  health:
    sensitive: false
eureka:
  instance:
    instanceId: ${spring.cloud.client.hostname}:${server.port}
    preferIpAddress: false
    leaseRenewalIntervalInSeconds: 10
  client:
    region: default
    registryFetchIntervalSeconds: 5
    registerWithEureka: true
    fetchRegistry: true
logging:
  level:
    com.netflix.discovery: 'OFF'
springfox:
  documentation:
    swagger:
      v2:
        path: /api-docs
        info:
          title: ${spring.application.name} Api Documents
          description: The Springfox suite of java libraries are all about automating the generation of machine and human readable specifications for JSON APIs written using the spring family of projects.
          version: 1.1.0