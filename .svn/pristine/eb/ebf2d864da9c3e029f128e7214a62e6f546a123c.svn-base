package com.tiamaes.bike.connector.protocol.handler;

import org.apache.commons.codec.DecoderException;
import org.springframework.stereotype.Component;

import com.fasterxml.jackson.core.JsonProcessingException;
import com.tiamaes.bike.common.bean.connector.DataCompress;
import com.tiamaes.bike.common.bean.message.Message;
import com.tiamaes.bike.common.bean.message.Message8001;

import io.netty.buffer.CompositeByteBuf;
import io.netty.buffer.Unpooled;
import io.netty.channel.Channel;

/**
 * 数据压缩上报
 * @author waibao001
 *
 */
@Component
public class Protocol0901Handler extends ProtocolHandler {
	
	@Override
	public Message execute(Channel channel, Message request) throws JsonProcessingException, DecoderException {
		String simNo = request.getHeader().getSimNo();
		Message8001 response = new Message8001(simNo);
		response.setResponseBody(request.getHeader(), 0);
		return response;
	}
	
	public static DataCompress decodeBody(Message request){
		DataCompress dataCompress= new DataCompress();
		byte[] bytebody=request.getBody();
		CompositeByteBuf buffer = Unpooled.compositeBuffer();
		buffer.writeBytes(bytebody);
		//压缩消息长度
		int compressLength = (int)buffer.readUnsignedInt();
		//压缩消息体
		byte[] compressContent = new byte[buffer.readableBytes()];
				buffer.readBytes(compressContent);
				
		dataCompress.setCompressLength(compressLength);
		dataCompress.setCompressContent(compressContent);
		
		return dataCompress;
	}
}
