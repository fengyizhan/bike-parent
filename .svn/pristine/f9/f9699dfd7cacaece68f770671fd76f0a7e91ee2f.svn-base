<div class="md-content">
	<div class="index-modal-header">
		<h6 ng-bind="dialog.title"></h6>
		<button class="close md-close" aria-hidden="true" data-dismiss="modal" type="button">×</button>
	</div>
	<div class="modal-body" style="padding: 0">
		<div class="modal-map">
			<ul class="nav nav-tabs" id="nav-tabs-project" role="tablist">
				<li role="presentation" class="active" style="margin-left: 10px;">
					<a target="_self" href="#tab1" role="tab" data-toggle="tab">数据报表</a>
				</li>
				<li role="presentation">
					<a target="_self" href="#tab2" role="tab" data-toggle="tab" ng-click="dialog.initMonitor()">实时监控</a>
				</li>
			</ul>
			<div class="tab-content">
				<div id="tab1" role="tabpanel" class="tab-pane active">
					<div class="container-fluid">
						<div class="row">
							<div class="col-md-12" style="margin-top:20px;">
								<div class="col-md-7">
									<label class="col-md-3 control-label" style="font-weight: normal;">工程名称:</label>
									<span ng-bind="dialog.data.name">大学路改造工程</span>
								</div>
      							<div class="col-md-4">
      								<label class="col-md-5 control-label" style="font-weight: normal;"><span style="letter-spacing:.5em;">责</span><span style="letter-spacing:.5em;">任</span>人:</label>
      								<span ng-bind="dialog.data.principal">张三</span>
      							</div>
							</div>
      						<div class="col-md-12" style="margin-top:5px;">
								<div class="col-md-7">
									<label class="col-md-3 control-label" style="font-weight: normal;">工程地址:</label>
									<span ng-bind="dialog.data.address">郑州市二七区</span>
								</div>
      							<div class="col-md-5">
      								<label class="col-md-4 control-label" style="font-weight: normal;">联系电话:</label>
      								<span ng-bind="dialog.data.telephone">13246791346</span>
      							</div>
							</div>
						</div>
						<div class="col-md-12" style="height: 350px; margin-top: 10px; overflow: auto;">
							<table id="projectMsg" class="table table-bordered table-condensed table-hover text-center">
								<thead style="background-color: #E1E4E9;">
									<tr>
										<td width="174">车牌号码</td>
										<td width="100">当前状态</td>
										<td width="120">驾驶员</td>
										<td width="160">联系电话</td>
										<td width="106">运输趟次</td>
									</tr>
								</thead>
								<tbody>
									<tr ng-repeat="item in dialog.list track by $index">
										<td ng-bind="item.carNo"></td>
										<td ng-bind="item.state"></td>
										<td ng-bind="item.driverName"></td>
										<td ng-bind="item.telephone"></td>
										<td ng-bind="item.tripCount"></td>
									</tr>
								</tbody>
							</table>
						</div>
					</div>
				</div>
				<div id="tab2" role="tabpanel" class="tab-pane">
					<div class="realtimeMonitor">
						<div id="monitorMap" style="width:100%;height:100%;"></div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>